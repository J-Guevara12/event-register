upstream frontend{
	server frontend:3000;
}

upstream backend{
	server backend:8000;
}

server {
    listen       80;
    server_name  localhost;
    location / {

        proxy_pass   http://frontend;
    }
    location /sign-up {

        proxy_pass   http://frontend/sign-up;
    }
    location /api {

        proxy_pass   http://backend;
    }

}
